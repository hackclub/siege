<% content_for :head do %>
  <style>
    .fieldset {
      border: 0;
      margin: 0;
      padding: 0;
      overflow: visible;
    }

    .fieldset-legend {
      font-size: 0.875rem;
      margin-bottom: 0.375rem;
    }

    .text-input,
    .textarea-input,
    .select-input {
      width: 100%;
      font-size: 1.125rem;
      padding: 0.5rem 0.125rem;
      border: none;
      border-radius: 0;
      background-color: transparent;
      position: relative;
      z-index: 1;
      appearance: none;
      -webkit-appearance: none;
    }

    .text-input:focus,
    .textarea-input:focus,
    .select-input:focus {
      outline: none;
    }

    .underline-field {
      position: relative;
      display: block;
      padding-bottom: clamp(22px, 3.2vw, 44px);
      margin-bottom: 0.5rem;
      overflow: visible;
    }

    .underline-field::after {
      content: "";
      position: absolute;
      left: 0;
      right: 0;
      bottom: 25%;
      height: clamp(18px, 2.8vw, 36px);
      background-image: url('<%= asset_path("underline-long.webp") %>');
      background-repeat: no-repeat;
      background-position: left bottom;
      background-size: 100% 100%;
      pointer-events: none;
      z-index: 0;
    }
  </style>
<% end %>


