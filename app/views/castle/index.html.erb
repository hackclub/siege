            navigateTo: '/keep'
          },
          {
            id: 'great-hall',  
            path: `M97 66L290 1.5L361.5 113L355.5 332.5L180 404.5L7 324.5L13.5 124L1.5 112L97 66Z`,
            fill: "#C72C2C", 
            fillOpacity: "0",
