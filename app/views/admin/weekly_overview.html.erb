    <% if @user_data.any? %>
      <% @user_data.each do |user_id, data| %>
        <div class="user-card" onclick="window.location.href='<%= @is_ysws_review ? ysws_review_user_path(@selected_week, user_id) : admin_weekly_overview_user_path(@selected_week, user_id) %>'">
