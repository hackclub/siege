<div class="admin-section">
  <div class="admin-header">
    <h1><%= @cosmetic.name %></h1>
    <div class="admin-actions">
      <%= link_to 'Edit', edit_admin_cosmetic_path(@cosmetic), class: 'btn btn-outline' %>
      <%= link_to 'Back to Cosmetics', admin_cosmetics_path, class: 'btn btn-outline' %>
    </div>
  </div>

  <div class="admin-content">
    <div class="cosmetic-details">
      <div class="cosmetic-image">
        <% if @cosmetic.image.attached? %>
          <%= image_tag @cosmetic.image, class: 'cosmetic-large', alt: @cosmetic.name %>
        <% else %>
          <div class="no-image-large">No image available</div>
        <% end %>
      </div>

      <div class="cosmetic-info">
        <div class="detail-row">
          <strong>Name:</strong>
          <span><%= @cosmetic.name %></span>
        </div>

        <div class="detail-row">
          <strong>Type:</strong>
          <span><%= @cosmetic.type.capitalize %></span>
        </div>

        <div class="detail-row">
          <strong>Cost:</strong>
          <span><%= @cosmetic.cost %> ðŸª™</span>
        </div>

        <div class="detail-row">
          <strong>Purchasable:</strong>
          <span>
            <% if @cosmetic.purchasable? %>
              <span class="badge badge-success">Yes</span>
            <% else %>
              <span class="badge badge-secondary">No</span>
            <% end %>
          </span>
        </div>

        <% if @cosmetic.description.present? %>
          <div class="detail-row">
            <strong>Description:</strong>
            <span><%= @cosmetic.description %></span>
          </div>
        <% end %>

        <div class="detail-row">
          <strong>Created:</strong>
          <span><%= @cosmetic.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>

        <div class="detail-row">
          <strong>Last Updated:</strong>
          <span><%= @cosmetic.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .cosmetic-details {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 2rem;
    align-items: start;
  }

  .cosmetic-large {
    max-width: 100%;
    max-height: 400px;
    object-fit: contain;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1rem;
    background: #f9f9f9;
  }

  .no-image-large {
    width: 100%;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px dashed #ddd;
    border-radius: 8px;
    color: #666;
    font-style: italic;
  }

  .cosmetic-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .detail-row {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .detail-row strong {
    color: #333;
    font-weight: 600;
  }

  .detail-row span {
    color: #666;
  }

  @media (max-width: 768px) {
    .cosmetic-details {
      grid-template-columns: 1fr;
    }
  }
</style>
