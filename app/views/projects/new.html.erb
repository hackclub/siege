<% content_for :title, "New project" %>

<%= render "projects/page_styles" %>
<%= render "shared/error_styles" %>

<div class="projects-new">

  <div class="projects-new-header">
    <h1 class="projects-new-title">Add new project</h1>
  </div>

  <div class="projects-new-body">
    <% if @project&.errors&.any? %>
      <div id="error_explanation" class="error-explanation">
        <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
        <ul>
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= render "form", project: @project %>
  </div>
</div>
