               } else {
                 statusElement.textContent = 'âœ— Error: ' + data.error;
                 statusElement.style.color = '#dc2626';
               }
             })
             .catch(error => {
               console.error('Error updating project created date:', error);
               statusElement.textContent = 'âœ— Network Error';
               statusElement.style.color = '#dc2626';
             });
           }
         </script>
