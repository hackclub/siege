<% content_for :head do %>
  <style>
    .projects-new {
      width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      margin-bottom: 3rem;
      position: relative;
    }

    .projects-new-header {
      text-align: center;
      margin-bottom: 1.5rem;
    }

    .projects-new-title {
      font-weight: 700;
      font-size: 2.25rem;
      margin-bottom: 0.5rem;
    }

    .projects-new-topbar {
      position: absolute;
      top: 0.75rem;
      left: 25%;
      transform: translateX(-50%);
      width: 100%;
      max-width: 32rem;
      margin: 0;
    }

    .projects-new-body {
      width: 100%;
      max-width: 32rem;
      margin-left: auto;
      margin-right: auto;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .error-explanation {
      background: transparent !important;
      border: 0;
      color: #b91c1c;
      padding: 0;
      margin-bottom: 1rem;
      width: 100%;
      max-width: 28rem;
      margin-left: auto;
      margin-right: auto;
    }

    .error-explanation h2 {
      font-weight: 700;
    }

    .projects-back {
      margin: 0;
    }

    .button-ghost {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 0.75rem;
      border: none;
      background: transparent;
      color: inherit;
      text-decoration: none;
      outline: none;
    }

    .button-ghost:hover {
      filter: brightness(0.95);
    }

    .button-ghost:focus,
    .button-ghost:focus-visible {
      outline: none;
      box-shadow: none;
    }
  </style>
<% end %>


